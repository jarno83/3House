<resources>

    <style name="DarkActionbar" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/abc_primary_text_material_light</item>
        <item name="actionMenuTextColor">@color/abc_primary_text_material_light</item>
        <item name="android:textColorSecondary">@color/abc_secondary_text_material_light</item>
    </style>

    <style name="DarkText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="MenuItemText" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">24sp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="MenuItemTextSmaller" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MenuItemTextSub" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DiscreteHeader" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="DescriptionText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MenuItemSubText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="WidgetHeading" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WidgetText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WidgetSubText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorValueItem</item>
    </style>

    <style name="FrameHeader" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/frame_header</item>
    </style>

    <style name="TransparentTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowBackground">@drawable/transparent</item>
        <item name="android:colorBackgroundCacheHint">@color/transparent_dark</item>
        <item name="android:windowContentOverlay">@color/transparent_dark</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
    </style>

    <style name="drawer_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/drawer_text</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <style name="inbox_item_button" parent="Widget.AppCompat.ImageButton">
        <item name="android:padding">10dp</item>
    </style>
</resources>
